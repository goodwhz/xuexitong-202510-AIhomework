# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=True

# 数据库配置（可选）
DATABASE_URL=postgresql://user:password@localhost:5432/paper_search

# 向量数据库配置（可选）
CHROMA_DB_PATH=./data/chroma

# ArXiv API配置
ARXIV_API_BASE_URL=http://export.arxiv.org/api/query
ARXIV_MAX_RESULTS=100
ARXIV_REQUEST_TIMEOUT=30

# 知识库配置
KNOWLEDGE_BASE_DATA_DIR=./data/arxiv
KNOWLEDGE_BASE_CACHE_TTL=604800  # 7天（秒）
KNOWLEDGE_BASE_UPDATE_INTERVAL=86400  # 24小时（秒）

# 支持的论文分类（逗号分隔）
SUPPORTED_CATEGORIES=cs.AI,cs.CV,cs.CL,cs.LG,cs.IR,cs.NE,stat.ML

# 大模型配置
LLM_MODEL_PATH=./models/qwen-7b
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 缓存配置
CACHE_ENABLED=True
CACHE_TTL=3600  # 1小时（秒）